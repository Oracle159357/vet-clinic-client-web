{
  "extends": ["react-app", "airbnb"],
  "overrides": [
    {
      "files": ["src/**/*.jsx", "src/**/*.js"],
      "rules": {
        "react/forbid-prop-types": 0,
        "react/jsx-props-no-spreading": "off",
        "default-param-last": 0,
        "no-param-reassign": 0,
        "no-shadow": "off"
      }
    }
  ],

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
